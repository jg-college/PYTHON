#EXERCISES
def greet_user():
    print("Hello Welcome to PYTHON")
greet_user()

def add_numbers(a, b):
     print(a + b)
add_numbers(15, 24)

def square(n):
    a=n*n
    print(a)
square(10)

def is_even(n):
    if n % 2 == 0:
        return True
    else:
        return False
print(is_even(5))

def details(name,age):
    print(f"my name is {name} and I am {age} years old")
details("James", 21)

#CHALLENGES
def max_of_three(a, b, c):
    return max(a, b, c)
print(max_of_three(5, 6, 7))

def count_vowels(s):
    vowels = 'aeiou'
    count = 0
    for char in s:
        if char in vowels:
            count += 1
    return count
print(count_vowels("hello"))

def factorial(n):
    f=1
    for x in range(1,n+1):
       f*=x
    print(f)
factorial(5)

def reverse_string(s):
    return s[::-1]
print(reverse_string("hello"))

def list_sum(n):
    s=0
    for i in n:
        s+=i
    print(s)
list_sum([1,5,6,8])

#TASK
def calculate_percentage(marks_list):
    percentage = sum(marks_list) / len(marks_list)
    return percentage


def get_grade(percentage):
    if percentage >= 90:
        return "A"
    elif percentage >= 75:
        return "B"
    elif percentage >= 60:
        return "C"
    else:
        return "D"


def show_result(name, marks_list):
    percentage = calculate_percentage(marks_list)
    grade = get_grade(percentage)

    print("Student:", name)
    print("Percentage:", percentage, "%")
    print("Grade:", grade)


# CALL
show_result("James", [5, 6, 8])
